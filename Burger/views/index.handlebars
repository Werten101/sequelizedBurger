<div class="row">
  <div class="col-md-12">
    <h1 id="title">Eat-Da-Burger!</h1>
     <img class="burgerImage" src="http://www.tastyburger.com/wp-content/themes/tastyBurger/images/home/img-large-burger.jpg"
    />
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <h2>Burgers I want to eat.</h2>

    <ul>
      {{#each burgers}}{{#unless this.devoured}}
      <div class="newBurgerDiv">
  
        {{this.burger_name}}

        <form id="devourbutton" action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="1">
          <button type="submit">Devour it!</button>
        </form>
      </li>
      </div>
      {{/unless}}{{/each}}
    </ul>
  </div>

  <div class="col-md-4">
  <h2>Add a Burger</h2>
    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">
        <label for="burger_name">Burger Name:</label>
        <input type="text" id="burger_name" name="burger_name">
      </div>


      <button type="submit">Add Burger</button>
    </form>
  </div>

  <div class="col-md-4">
    <h2>Burgers I have devoured!</h2>

    <ul>
      {{#each burgers}} {{#if this.devoured}}
      <div class="devouredBurgerDiv">
      <li>
        {{this.burger_name}}

        {{!--<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="0">
          <button type="submit">Un-eat-da-burger!</button>
        </form>--}}
      </li>
      </div>
       {{/if}} {{/each}}
    </ul>
  </div>
</div>